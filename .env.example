# ==================================
# SERVER CONFIGURATION
# ==================================
NODE_ENV=development
PORT=5000
CLIENT_NAME=Backend API

# ==================================
# DATABASE
# ==================================
DATABASE_URL=mongodb://localhost:27017/your-database-name

# ==================================
# AUTHENTICATION & SECURITY
# ==================================
# Must be at least 32 characters long
TOKEN_SECRET=your-super-secret-jwt-token-should-be-at-least-32-characters-long
# Admin password (min 8 characters)
ADMIN_PASS=SecureAdminPassword123

# ==================================
# DIGITALOCEAN SPACES / AWS S3
# ==================================
DO_SPACE_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACE_ACCESS_KEY=your-access-key-here
DO_SPACE_SECRET_KEY=your-secret-key-here
DO_SPACE_BUCKET=your-bucket-name

# ==================================
# STRIPE PAYMENT
# ==================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================================
# FIREBASE (OPTIONAL)
# ==================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email@project.iam.gserviceaccount.com

# ==================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# ==================================
# TWILIO SMS (OPTIONAL)
# ==================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==================================
# CLIENT URL (FOR CORS IN PRODUCTION)
# ==================================
CLIENT_URL=https://yourdomain.com
